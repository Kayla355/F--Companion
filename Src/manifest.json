{
  "manifest_version": 2,

  "name": "F! Downloader Dev",
  "description": "F! Downloader lets you download all pages of a manga at once or just view the links to them.",
  "version": "0.3.0.13",
  "icons": { "256": "images/icon-256.png"},
  "options_page": "Options.html",
  "background": { "scripts": ["scripts/background.js", "scripts/jquery-2.0.3.min.js"] },
  "web_accessible_resources": ["scripts/jquery-2.0.3.min.map", "images/trashcan.png"],
  
  "permissions": [
	"tabs", 
  "downloads", 
  "cookies", 
  "http://www.fakku.net/*"
  ],

  "browser_action": {
    "default_icon": "images/icon-256.png",
    "default_popup": "Dropdown.html"
  },
/*
  "page_action": {
    "default_icon": "images/icon-256.png",
    "default_popup": "Dropdown.html"
  },
*/  
  "content_scripts": [
		{
			"matches": ["http://www.fakku.net/doujinshi/*", "http://www.fakku.net/manga/*"],
			"js": ["scripts/jquery-2.0.3.min.js", "scripts/GrabLinks.js", "scripts/GrabInfo.js"]
		}
	]
}