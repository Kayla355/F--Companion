{
  "manifest_version": 2,

  "name": "F! Companion Dev",
  "description": "F! Companion lets you download all pages of a manga at once or just view the links to them.",
  "version": "0.4.0.16",
  "icons": { "256": "images/icon-256.png"},
  "options_page": "Options.html",
  "background": { "scripts": ["scripts/background.js", "scripts/jquery-2.0.3.min.js"] },
  "web_accessible_resources": ["scripts/jquery-2.0.3.min.map", "images/trashcan.png", "images/iconDL-256.png"],
  
  "permissions": [
	"tabs", 
  "downloads", 
  "cookies", 
  "https://www.fakku.net/*"
  ],

  "browser_action": {
    "default_icon": "images/icon-256.png",
    "default_popup": "DropdownNotes.html"
  },
  "content_scripts": [
		{
			"matches": ["https://www.fakku.net/doujinshi/*", "https://www.fakku.net/manga/*"],
			"js": ["scripts/jquery-2.0.3.min.js", "scripts/GrabLinks.js", "scripts/GrabInfo.js"]
		}
	]
}